{% extends '::base.html.twig' %}

{% block content %}
    <h1>{{ account.name }} - ${{ account.postedBalance|number_format(2) }}</h1>

    {% if account.children.count %}
        <div class="section">
            <h3>Child Accounts</h3>
            <ul>
                {% for child in account.children %}
                    <li><a href="{{ path('pengarwin_account_show', { 'path': child.path }) }}">{{ child.name }}</a></li>
                {% endfor %}
            </ul>
        </div><!-- .section -->
    {% endif %}

    <div class="section">
        <table cellspacing="0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Vendor</th>
                    <th>Description</th>
                    <th>Offset Account</th>
                    <th class="money">Credit</th>
                    <th class="money">Debit</th>
                    <th class="money">Balance</th>
                    <th>Posted?</th>
                </tr>
            </thead>
            <tbody>
                {% for posting in account.postedPostings %}
                    <tr>
                        <td>{{ posting.journal.date|date('d M Y') }}</td>
                        <td><a href="{{ path('pengarwin_vendor_show', { 'slug': posting.journal.vendor.slug}) }}">{{ posting.journal.vendor }}</a></td>
                        <td>{{ posting.journal.description }}</td>
                        <td><a href="{{ path('pengarwin_account_show', { 'path': posting.offsetPosting.account.path }) }}">{{ posting.offsetPosting.account.segmentation }}</a></td>
                        <td class="money">{{ posting.creditAmount ? posting.creditAmount|number_format(2) : '' }}</td>
                        <td class="money">{{ posting.debitAmount ? posting.debitAmount|number_format(2) : '' }}</td>
                        <td class="money">{{ posting.calculatedBalance|number_format(2) }}</td>
                        <td>Y</td>
                    </tr>
                {% endfor %}
                {% for posting in account.unpostedPostings %}
                    <tr>
                        <td>{{ posting.journal.date|date('d M Y') }}</td>
                        <td><a href="{{ path('pengarwin_vendor_show', { 'slug': posting.journal.vendor.slug}) }}">{{ posting.journal.vendor }}</a></td>
                        <td>{{ posting.journal.description }}</td>
                        <td><a href="{{ path('pengarwin_account_show', { 'path': posting.offsetPosting.account.path }) }}">{{ posting.offsetPosting.account.segmentation }}</a></td>
                        <td class="money">{{ posting.creditAmount ? posting.creditAmount|number_format(2) : '' }}</td>
                        <td class="money">{{ posting.debitAmount ? posting.debitAmount|number_format(2) : '' }}</td>
                        <td class="money">{{ posting.calculatedBalance|number_format(2) }}</td>
                        <td>
                            <form action="{{ path('pengarwin_journal_post', { 'path': account.path, 'id': posting.journal.id }) }}" method="post">
                                <input type="submit" value="P" />
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                {{ form_start(form) }}
                    <tr>
                        <td>{{ form_widget(form.date) }}</td>
                        <td>{{ form_widget(form.proposedVendorName) }}</td>
                        <td>{{ form_widget(form.description) }}</td>
                        <td>{{ form_widget(form.proposedOffsetAccountSegmentation) }}</td>
                        <td class="money">{{ form_widget(form.creditAmount) }}</td>
                        <td class="money">{{ form_widget(form.debitAmount) }}</td>
                        <td></td>
                        <td>{{ form_widget(form.save) }}</td>
                    </tr>
                {{ form_end(form) }}
            </tbody>
        </table>
    </div><!-- .section -->
<script>
    $(function() {
        $.ajax({
            url: "/vendor.json",
            dataType: "json",
            success: function(data) {
                $("#form_proposedVendorName").autocomplete({
                    delay: 0,
                    source: data,
                    minlength: 0,
                    select: function(event, ui)
                    {
                        $("#form_description").val(
                            ui.item.defaultJournalDescription
                        );
                        $("#form_proposedOffsetAccountSegmentation").val(
                            ui.item.defaultOffsetAccount
                        );
                        $("#form_description").val(
                            ui.item.defaultJournalDescription
                        );
                        $("#form_creditAmount").val(
                            ui.item.defaultJournalCreditAmount
                        );
                        $("#form_debitAmount").val(
                            ui.item.defaultJournalDebitAmount
                        );
                    }
                });
            }
        });

        $.ajax({
            url: "/accounts.json",
            dataType: "json",
            success: function(data) {
                $("#form_proposedOffsetAccountSegmentation").autocomplete({
                    delay: 0,
                    source: data,
                    minlength: 0
                });
            }
        });
    });
    </script>
{% endblock %}
