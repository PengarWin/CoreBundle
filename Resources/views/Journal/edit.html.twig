{% extends '::base.html.twig' %}

{% block content %}
    <h1>Edit Journal #{{ journal.id }}</h1>
    {{ form_start(form) }}
        <div class="section">
            <h3>Details</h3>
            <table cellspacing="0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Chk #</th>
                        <th>Vendor</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ form_widget(form.date) }}</td>
                        <td>{{ form_widget(form.chequeNumber) }}</td>
                        <td>{{ form_widget(form.vendor) }}</td>
                        <td>{{ form_widget(form.description) }}</td>
                    </tr>
                </tbody>
            </table>
        </div><!-- .section -->

        <div class="section">
            <h3>Postings</h3>
            <table cellspacing="0">
                <thead>
                    <tr>
                        <th>Account</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    {% for posting in form.postings %}
                        <tr>
                            <td>{{ form_widget(posting.account) }}</td>
                            <td>{{ form_widget(posting.amount) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div><!-- .section -->
        <div class="section">
            {{ form_widget(form.save) }}
        </div><!-- .section -->
    {{ form_end(form) }}
{% endblock %}
