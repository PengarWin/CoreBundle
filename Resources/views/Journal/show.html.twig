{% extends '::base.html.twig' %}

{% block content %}
    <h1>Journal #{{ journal.id }}</h1>
    <p><a href="{{ path('phospr_journal_edit', { 'id': journal.id }) }}">Edit Journal</a></td>
    <div class="section">
        <h3>Details</h3>
        <table cellspacing="0">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Chk #</th>
                    <th>Vendor</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ journal.date|date('d M Y') }}</td>
                    <td>{{ journal.chequeNumber }}</td>
                    <td><a href="{{ path('phospr_vendor_show', { 'slug': journal.vendor.slug}) }}">{{ journal.vendor }}</a></td>
                    <td>{{ journal.description }}</td>
                </tr>
            </tbody>
        </table>
    </div><!-- .section -->

    <div class="section">
        <h3>Postings</h3>
        <table cellspacing="0">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                {% for posting in journal.postings %}
                    <tr>
                        <td><a href="{{ path('phospr_account_show', { 'path': posting.account.path }) }}">{{ posting.account.segmentation }}</a></td>
                        <td>{{ posting.amount }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div><!-- .section -->
{% endblock %}
